<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.cetrd.web.reference.paymentmethod.PaymentMethodEdit"
        datasource="paymentMethodDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.cetrd.web.reference.paymentmethod">
    <dsContext>
        <datasource id="paymentMethodDs"
                    class="com.company.cetrd.entity.reference.PaymentMethod"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="paymentMethodDs">
            <column width="250px">
                <field id="name" />
                <field id="code" />
                <field id="validFrom" />
                <field id="validUntil" />
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
