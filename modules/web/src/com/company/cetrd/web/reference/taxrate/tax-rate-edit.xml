<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/window.xsd"
        caption="msg://editCaption"
        class="com.company.cetrd.web.reference.taxrate.TaxRateEdit"
        datasource="taxRateDs"
        focusComponent="fieldGroup"
        messagesPack="com.company.cetrd.web.reference.taxrate">
    <dsContext>
        <datasource id="taxRateDs"
                    class="com.company.cetrd.entity.reference.TaxRate"
                    view="_local"/>
    </dsContext>
    <dialogMode height="600"
                width="800"/>
    <layout expand="windowActions"
            spacing="true">
        <fieldGroup id="fieldGroup"
                    datasource="taxRateDs">
            <column width="250px">
                <field id="validFrom"/>
                <field id="validUntil"/>
                <field id="rate"/>
            </column>
        </fieldGroup>
        <frame id="windowActions"
               screen="editWindowActions"/>
    </layout>
</window>
